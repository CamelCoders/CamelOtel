<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/light_color"
    app:cardCornerRadius="@dimen/spacing_xsmall"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:gravity="left|center"
                android:minHeight="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Company Information"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/dark_color"
                    app:fontFamily="sans-serif-medium" />


            </LinearLayout>
            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:gravity="end|center"
                android:minHeight="40dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/shortcodecompany"
                    style="@style/EditText.Flat.Grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:background="@drawable/edit_text_round_bg_white"
                    android:gravity="start"
                     android:paddingRight="@dimen/spacing_middle"
                    android:hint="Short Code"
                      android:minHeight="45dp"
                    android:paddingLeft="@dimen/spacing_middle" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/companyContactSal"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_round_bg_white"
                android:drawableEnd="@drawable/ic_expand_arrow"
                android:drawableRight="@drawable/ic_expand_arrow"
                android:hint="Mr"
                />
            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/contactPersonName"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="4"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Contact Person Name"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:weightSum="3">
            <EditText
                android:id="@+id/companyName"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Company Name"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/pinCode"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Pincode"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />


            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/companyCity"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="City"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />


        </LinearLayout>



        <EditText
            android:id="@+id/fullAdd"
            style="@style/EditText.Flat.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/edit_text_round_bg_white"
            android:gravity="start"
            android:hint="Full Address"
            android:inputType="textMultiLine"
            android:maxHeight="120dp"
            android:minHeight="100dp"
            android:paddingLeft="@dimen/spacing_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/companystate"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="State"
                android:drawableEnd="@drawable/ic_expand_arrow"
                android:drawableRight="@drawable/ic_expand_arrow"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/companyCountry"
                style="@style/EditText.Flat.Grey"
                android:drawableEnd="@drawable/ic_expand_arrow"
                android:drawableRight="@drawable/ic_expand_arrow"
                android:layout_width="0dp"
                android:background="@drawable/edit_text_round_bg_white"

                android:layout_height="45dp"
                android:layout_weight="1"
                 android:hint="Country"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/customerEmail"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Email"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />




        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/companyPhone"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Phone"
                 android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/companyMobile"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Mobile"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/companyTaxid"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Tax ID"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:weightSum="3">

            <EditText
                android:id="@+id/gstIdType"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                 android:background="@drawable/edit_text_round_bg_white"
                android:hint="GST No"
                  android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
            <EditText
                android:id="@+id/companyOpeningBalance"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Opening Balance"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <EditText
                android:id="@+id/companyCreditBalance"
                style="@style/EditText.Flat.Grey"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_round_bg_white"
                android:hint="Credit Balance"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_submit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rect_primary"
            android:text="ADD Company"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white" />


    </LinearLayout>

</androidx.cardview.widget.CardView>
